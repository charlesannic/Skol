<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_homework"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.charl.skol.fragments.MemoFragment"
    android:background="?android:colorBackground">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="80dp"
        android:paddingBottom="48dp"
        android:clipToPadding="false"
        android:nestedScrollingEnabled="false"
        tools:listitem="@layout/item_course"
        android:theme="@style/RecyclerViewBB2" />

    <LinearLayout
        android:id="@+id/empty_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/img_homework"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/homework"
            android:scaleType="fitCenter"/>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/txt_homework"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parfait, aucun travail Ã  l'horizon !"
            android:textSize="18sp"
            android:alpha="0.75"
            android:gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
