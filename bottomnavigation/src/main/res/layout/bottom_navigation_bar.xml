<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bb_bottom_bar_shadow"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:src="@drawable/bn_top_shadow"/>

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorSecondItem">

        <View
            android:id="@+id/circular_reveal"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/transparent">

            <LinearLayout
                android:id="@+id/real_bar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <RelativeLayout
                    android:id="@+id/item_ideas"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:paddingTop="16dp"
                    android:tag="0"
                    android:theme="@style/BN_Theme">

                    <ImageView
                        android:id="@+id/ic_ideas"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:alpha="0.54"
                        android:background="@null"
                        android:rotation="180"
                        android:src="@drawable/ic_wb_incandescent_white_24dp" />

                    <TextView
                        android:id="@+id/label_ideas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:alpha="0"
                        android:background="@null"
                        android:text="Idées"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_homework"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:clickable="true"
                    android:paddingTop="7dp"
                    android:tag="1"
                    android:theme="@style/BN_Theme">

                    <ImageView
                        android:id="@+id/ic_homework"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:src="@drawable/ic_bookmark_white_24dp" />

                    <TextView
                        android:id="@+id/label_homework"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@null"
                        android:text="Devoirs"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_courses"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:paddingTop="16dp"
                    android:tag="2"
                    android:theme="@style/BN_Theme">

                    <ImageView
                        android:id="@+id/ic_courses"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:alpha="0.54"
                        android:background="@null"
                        android:src="@drawable/ic_event_note_white_24dp" />

                    <TextView
                        android:id="@+id/label_courses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:alpha="0"
                        android:background="@null"
                        android:text="Cours"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/item_grades"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:clickable="true"
                    android:paddingTop="16dp"
                    android:tag="3"
                    android:theme="@style/BN_Theme">

                    <ImageView
                        android:id="@+id/ic_grades"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:alpha="0.54"
                        android:background="@null"
                        android:src="@drawable/ic_insert_chart_white_24dp" />

                    <TextView
                        android:id="@+id/label_grades"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:alpha="0"
                        android:background="@null"
                        android:text="Résultats"
                        android:textColor="#FFF"
                        android:textSize="14sp" />

                </RelativeLayout>

            </LinearLayout>

            <Space
                android:id="@+id/space"
                android:layout_width="match_parent"
                android:layout_height="48dp" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>